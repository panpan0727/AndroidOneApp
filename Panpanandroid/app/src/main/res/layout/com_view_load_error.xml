<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    
    
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp128"
        android:layout_height="@dimen/dp134"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp30"
        android:scaleType="centerInside"
        android:src="@mipmap/com_ic_loading_error"/>
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp4"
        android:text="页面加载失败"
        android:textColor="@color/com_333333"
        android:textSize="@dimen/sp14"
        android:visibility="visible"/>
    
    <TextView
        android:id="@+id/button1"
        android:layout_width="@dimen/dp96"
        android:layout_height="@dimen/dp35"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/com_bg_retry_btn"
        android:gravity="center"
        android:text="@string/com_retry"
        android:textColor="@color/com_333333"
        android:textSize="@dimen/sp14"/>

</RelativeLayout>